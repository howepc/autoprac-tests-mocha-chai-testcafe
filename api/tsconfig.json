{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "spec/ci/template",
    "dist",
    "node_modules"
  ]
}